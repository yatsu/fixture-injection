{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "plugins": [
      {
        "name": "typescript-eslint-language-service",
        "watchDirs": [
          "packages/fixture-injection",
          "packages/jest-fixture-injection",
          "packages/jest-fixture-injection-tests",
          "packages/jest-fixture-injection-example",
          "packages/jest-fixture-injection-example-react",
          "."
        ]
      }
    ]
  }
}
